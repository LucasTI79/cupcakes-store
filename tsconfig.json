{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "typeRoots": [
      "/node_modules/@types/**/*",
      "/src/@types/**/*",
    ],
    "paths": {
      "@": [
        "./src"
      ],
      "@components/*": [
        "./src/view/components/*"
      ],
      "@screens/*": [
        "./src/view/screens/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@hooks/*": [
        "src/app/hooks/*"
      ],
      "@services/*": [
        "./src/app/services/*"
      ],
      "@models/*": [
        "./src/app/models/*"
      ],
      "@utils/*": [
        "src/app/utils/*"
      ],
      "@context/*": [
        "./src/app/context/*"
      ],
      "@lib/*": [
        "./src/app/lib/*"
      ],
      "@theme/*": [
        "./src/view/theme/*"
      ],
    }
  }
}
