{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "typeRoots": [
      "/node_modules/@types/**/*",
      "/src/@types/**/*",
      "jest/types"
    ],
    "paths": {
      "@": [
        "./src"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@screens/*": [
        "./src/screens/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@models/*": [
        "./src/models/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@context/*": [
        "./src/context/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@theme/*": [
        "./src/theme/*"
      ],
    }
  },
  "include": [
    "./src/**/*.test.ts"
  ],
}
